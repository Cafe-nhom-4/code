
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Home</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.14.0/css/all.css" integrity="sha384-HzLeBuhoNPvSl5KYnjx0BT+WB0QEEqLprO+NBkkk5gbc67FTaL7XIGa2w1L0Xbgc" crossorigin="anonymous">
    <link rel="stylesheet" href="~/File/CSS/home.css"/>
</head>
<body>
    <style>
        .content {
            background: url(/File/Images/banghieucaphedep.jpg);
            background-position: center;
            background-repeat: no-repeat;
            background-size: 100% 100%;
        }
    </style>
    <header style="background:#00915a">
        <div class="title"><h1>CAFE<span>.HOME</span></h1></div>
        <div class="info">
            <i id="admin" class="fas fa-user">@Session["UserName"]</i>
            <a href="@Url.Action("Index","Login")">Logout</a>
        </div>       
    </header>
    <section>
        <nav style="background:#222b35">
            <h1><a href="@Url.Action("Index","Home")">MENU</a></h1>
            <ul class="nav-list">
                <li class="nav-item">
                    <i class="fas fa-user"></i>
                    <a class="nav-text">Tổng quan</a>
                </li>
                <li class="nav-item">
                    <i class="fas fa-table"></i>
                    <a class="nav-text" href="@Url.Action("Index","Table")">Sơ đồ phòng, bàn</a>
                </li>
                <li class="nav-item">
                    <i class="fas fa-mug-hot"></i>
                    <a class="nav-text" href="@Url.Action("Index","Foods")">Đồ uống, móm ăn</a>
                </li>
                <li class="nav-item">
                    <i class="fas fa-chart-bar"></i>
                    <a class="nav-text" href="@Url.Action("Index","Revenue")">Thống kê doanh thu</a>
                </li>
                <li class="nav-item">
                    <i class="far fa-calendar-check"></i>
                    <a class="nav-text" href="@Url.Action("Index","BillInfoes")">Quản lý hóa đơn</a>
                </li>
                <li class="nav-item">
                    <i class="fas fa-user-circle"></i>
                    <a class="nav-text" href="@Url.Action("Index","Accounts")">Quản lý nhân viên</a>
                </li>
            </ul>
        </nav>
        <div class="content">
            
        </div>
    </section>
</body>
</html>
