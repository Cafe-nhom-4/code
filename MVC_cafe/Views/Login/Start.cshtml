@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cafe_home</title>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.14.0/css/all.css" integrity="sha384-HzLeBuhoNPvSl5KYnjx0BT+WB0QEEqLprO+NBkkk5gbc67FTaL7XIGa2w1L0Xbgc" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
</head>
<body>
    <style>
        h1 {
            text-align: center;
            color: #fff !important;
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        }

        ul {
            list-style: none;
        }

        a:hover {
            text-decoration: none !important;
        }

        i {
            color: #fff;
        }

        .login_list {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-top: 15px;
        }

            .login_list > li {
                margin-left: 5px;
            }

        .login_text {
            color: #fff;
            font-size: 18px;
        }
        .bg {
            height: 850px;
            width: 100%;
            background:url(/File/Images/background.jpg);
            background-position:center;
            background-repeat: no-repeat;
            background-size: 100% 100%;
        }
    </style>
    <nav style="background:#111; width:100%">
        <div class="row">
            <div class="col-sm-9">
                <h1>CAFE.Home</h1>
            </div>
            <div class="col-sm-3">
                <ul class="login_list">
                    <li class="btn btn-info">
                        <i class="fas fa-sign-in-alt"></i>
                        <a class="login_text" href="@Url.Action("Index","Login")">Đăng nhập</a>
                    </li>
                    <li class="btn btn-info">
                        <i class="fas fa-sign-out-alt"></i>
                        <a class="login_text" href="@Url.Action("Register","Login")">Đăng ký</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <section class="bg">
    </section>
</body>
</html>
