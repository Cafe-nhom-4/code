@model MVC_cafe.Models.Account
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/File/CSS/style.css" />
</head>
<body>
    <div id="form_login">
        @using (Html.BeginForm("Authen", "Login", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <table class="form_login">
                <tr>
                    <td class="form_title" colspan="2">Đăng Nhập</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.UserName)</td>
                    <td>@Html.TextBoxFor(m => m.UserName)</td>
                </tr>
                <tr>
                    <td colspan="2">@Html.ValidationMessageFor(m => m.UserName)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.PassWord)</td>
                    <td>@Html.PasswordFor(m => m.PassWord)</td>
                </tr>
                <tr>
                    <td colspan="2">@Html.ValidationMessageFor(m => m.PassWord)</td>
                </tr>
                <tr>
                    <td colspan="2">
                        @if (ViewBag.error != null)
                        {
                            <span class="field-validation-error">@Html.DisplayFor(m => m.LoginErrorMessage)</span>
                        }
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <input class="btn btn-info" type="submit" value="Login" />
                        <input class="btn btn-info" onclick="reset()" type="submit" value="Reset" />
                        <a class="btn btn-info" href="@Url.Action("Register","Login")">Register</a>
                    </td>
                </tr>
            </table>
        }
    </div>
    <script>
        function reset() {
            document.getElementById("form_login").reset();
        }
    </script>
</body>
</html>
